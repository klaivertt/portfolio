/* ===============================
    VARIABLES
=============================== */
:root {
    --primary-color: #D20A2E;
    --secondary-color: #FF4500;
    --background-color: #121212;
    --header-background: #1e1e1e;
    --text-color: #e0e0e0;
    --highlight-color: #f0f0f0;
    --shadow-color: rgba(0, 0, 0, 0.3);
    --font-family: 'Poppins', sans-serif;
}

/* ===============================
    GLOBAL STYLES
=============================== */
body {
    font-family: var(--font-family);
    background-color: var(--background-color);
    color: var(--text-color);
    line-height: 1.7;
    font-size: 1.05rem;
    letter-spacing: 0.01em;
    -webkit-font-smoothing: antialiased;
}

/* ===============================
    HEADER STYLES
=============================== */
header {
    background-color: var(--header-background);
    color: var(--highlight-color);
    padding: 1.2rem 0.5rem;
    box-shadow: 0 2px 8px var(--shadow-color);
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
}

nav ul {
    list-style: none;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    margin: 0;
    gap: 18px;
}

nav ul li {
    margin: 0 10px;
}

nav ul li a {
    color: var(--highlight-color);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    padding: 6px 14px;
    border-radius: 6px;
    transition: color 0.3s, background 0.3s, transform 0.3s;
}

nav ul li a:hover {
    color: #fff;
    background: var(--primary-color);
    transform: scale(1.08);
}

/* ===============================
    HERO SECTION STYLES
=============================== */
.hero-content {
    text-align: center;
    padding: 100px 20px 60px 20px;
    background: linear-gradient(135deg, rgba(0,0,0,0.85), rgba(210,10,46,0.08));
    margin: 80px auto 30px auto;
    box-shadow: 0 8px 24px var(--shadow-color);
    max-width: 800px;
    border-radius: 18px;
    backdrop-filter: blur(10px);
    transition: transform 0.3s, box-shadow 0.3s;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeIn 1s ease-out forwards;
}

.hero-content:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 20px var(--shadow-color);
}

.highlight {
    color: var(--primary-color);
    font-weight: bold;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    color: transparent;
    animation: highlightAnim 3s linear infinite;
}

.hero-content h1 {
    font-size: 2.6rem;
    margin-bottom: 18px;
    color: #fff;
    text-shadow: 2px 2px 10px rgba(0,0,0,0.7);
    font-weight: 700;
}

.hero-content p {
    font-size: 1.2rem;
    line-height: 1.7;
    color: var(--highlight-color);
    margin: 10px 0;
}

/* Citation Style */
.quote {
    margin-top: 30px;
    font-style: italic;
    text-align: center;
    color: #eeeeee;
    font-size: 1.1rem;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInQuote 1.5s ease-out forwards 0.5s;
}

.quote-author {
    margin-top: 10px;
    font-weight: 600;
    font-size: 1rem;
    color: #dddddd;
}

/* Keyframe Animations */
@keyframes fadeIn {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInQuote {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes highlightAnim {
    0% {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }
}

/* ===============================
    FOOTER STYLES
=============================== */
footer {
    text-align: center;
    padding: 24px 0 12px 0;
    background-color: var(--header-background);
    color: var(--highlight-color);
    border-top: 2px solid var(--primary-color);
    width: 100%;
    font-size: 1rem;
    letter-spacing: 0.02em;
}

/* ===============================
    PROJECTS SECTION STYLES
=============================== */
#works {
    padding: 50px 20px;
    text-align: center;
    background-color: var(--background-color);
}

#works h2 {
    font-size: 2.2rem;
    margin-bottom: 25px;
    color: var(--primary-color);
    font-weight: bold;
}

.projects {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 36px;
    padding: 24px 0 48px 0;
    margin-bottom: 40px;
}

.project-card {
    background-color: var(--header-background);
    padding: 22px 22px 28px 22px;
    border-radius: 18px;
    box-shadow: 0 8px 24px var(--shadow-color);
    transition: transform 0.3s, box-shadow 0.3s;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    min-width: 0;
    align-items: flex-start;
}

.project-card img {
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
    border-bottom: 5px solid var(--primary-color);
    border-radius: 14px 14px 0 0;
    background: #222;
    margin-bottom: 12px;
}

.project-card h3 {
    font-size: 1.25rem;
    margin: 16px 0 8px 0;
    color: var(--primary-color);
    font-weight: 700;
    text-transform: uppercase;
}

.project-card p {
    font-size: 1rem;
    margin-bottom: 10px;
    color: var(--highlight-color);
}

.project-card .project-date {
    font-size: 0.92rem;
    color: #a0a0a0;
    margin-top: 6px;
}

.project-card a {
    text-decoration: none;
    color: var(--primary-color);
    font-weight: 600;
    transition: color 0.3s, background 0.3s;
    font-size: 1rem;
    padding: 8px 18px;
    border-radius: 7px;
    background: rgba(210,10,46,0.10);
    margin-top: 8px;
    letter-spacing: 0.01em;
}

.project-card a:hover {
    color: #fff;
    background: var(--primary-color);
}

.project-card:hover {
    transform: translateY(-8px) scale(1.03);
    box-shadow: 0 20px 40px var(--shadow-color);
}

/* ===============================
    ABOUT ME SECTION STYLES
=============================== */
#about-me {
    padding: 60px 0 0 0;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
}

#about-me .section-container {
    background: rgba(255, 255, 255, 0.04);
    padding: 32px 5vw;
    margin: auto auto auto auto;
    border-radius: 12px;
    max-width: 1500px;
    box-shadow: 0 4px 16px var(--shadow-color);
    width: 100%;
    box-sizing: border-box;
}

#about-me h2 {
    font-size: 2.1rem;
    margin-bottom: 18px;
    color: var(--primary-color);
    font-weight: 700;
}

#about-me .about-me-content {
    max-width: 850px;
    margin: 0 auto;
    text-align: left;
    padding: 0 2vw;
}

#about-me h4 {
    font-size: 1.3rem;
    margin-bottom: 14px;
    color: var(--primary-color);
    font-weight: 600;
    text-align: left;
}

#about-me p {
    font-size: 1.08rem;
    line-height: 1.7;
    margin-bottom: 14px;
    color: var(--highlight-color);
}

#about-me .highlight {
    color: var(--primary-color);
    font-weight: bold;
}

@media (max-width: 600px) {
    #about-me .about-me-content {
        padding: 0 1vw;
    }
    #about-me h4 {
        font-size: 1.05rem;
    }
    #about-me p {
        font-size: 0.97rem;
        margin-bottom: 10px;
    }
}

/* ===============================
    SKILLS SECTION STYLES
=============================== */
#skills {
    padding: 40px 0 60px 0;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
}

#skills h3 {
    font-size: 2.2rem;
    margin-bottom: 24px;
    color: var(--primary-color);
    font-weight: 700;
}

#skills h4 {
    margin-bottom: 30px;
    color: var(--highlight-color);
    font-weight: bold;
    text-align: center;
}

.skills-category {
    margin-bottom: 40px;
    text-align: center;
}

.skills-category h4 {
    font-size: 1.2rem;
    color: var(--highlight-color);
    margin-bottom: 16px;
    font-weight: 600;
}

.skills-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 18px;
    padding: 12px 5vw;
    width: 100%;
    box-sizing: border-box;
}

.skill {
    background-color: #49494910;
    border-radius: 12px;
    padding: 18px;
    text-align: center;
    box-shadow: 0 2px 8px var(--shadow-color);
    transition: transform 0.3s, box-shadow 0.3s;
    min-width: 0;
}

.skill img {
    width: 54px;
    height: 54px;
    margin-bottom: 8px;
}

.skill span {
    display: block;
    font-size: 1.1rem;
    color: var(--highlight-color);
    font-weight: 600;
}

.skill:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px var(--shadow-color);
}

.project-tools {
    margin-top: 10px;
    font-size: 0.9rem;
    color: #a0a0a0;
}

.project-tools strong {
    color: #989898;
}

/* ===============================
    "Voir plus" BUTTON STYLES
=============================== */
.btn-more {
    display: inline-block;
    background-color: var(--primary-color);
    color: var(--highlight-color);
    padding: 12px 28px;
    font-size: 1.15rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 8px;
    text-align: center;
    margin-top: 24px;
    transition: background 0.3s, transform 0.3s;
    border: 2px solid var(--primary-color);
    letter-spacing: 0.02em;
}

.btn-more:hover {
    background-color: #9a172f;
    transform: scale(1.06);
}

.btn-more:active {
    transform: scale(1);
}

/* ===============================
    CONTACT SECTION STYLES
=============================== */
#contacts {
    padding: 48px 10px;
    text-align: center;
    color: var(--highlight-color);
    background-color: var(--header-background);
}

#contacts h2 {
    font-size: 2.1rem;
    margin-bottom: 18px;
    color: var(--primary-color);
    font-weight: 700;
}

#contacts p {
    font-size: 1.1rem;
    margin-bottom: 32px;
    color: #d1d1d1;
}

.contact-list {
    list-style: none;
    padding: 0;
    margin-bottom: 32px;
}

.contact-list li {
    margin: 8px 0;
}

.contact-list a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s;
}

.contact-list a:hover {
    color: #fff;
    background: var(--primary-color);
    border-radius: 4px;
    padding: 2px 6px;
}

.social-links {
    margin-top: 16px;
}

.social-links a {
    display: inline-block;
    margin: 0 8px;
    color: #fff;
    background-color: var(--primary-color);
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 1rem;
    text-decoration: none;
    transition: background 0.3s, transform 0.2s;
    font-weight: 600;
}

.social-links a:hover {
    background-color: #9a172f;
    transform: scale(1.08);
}

/* ===============================
    RESPONSIVE DESIGN
=============================== */
@media (max-width: 900px) {
    #about-me .section-container,
    #skills {
        padding: 18px 2vw;
    }
    .skills-list {
        padding: 12px 2vw;
    }
    .hero-content {
        padding: 80px 8vw 40px 8vw;
        margin-top: 100px;
    }
}

@media (max-width: 600px) {
    #about-me .section-container,
    #skills {
        padding: 8px 0;
    }
    .skills-list {
        gap: 10px;
        padding: 8px 0;
    }
    .hero-content {
        padding: 60px 4vw 30px 4vw;
        margin-top: 80px;
    }
}

/* ===============================
    SCROLL ANIMATIONS
=============================== */
.scroll-animation {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.8s, transform 0.8s;
}

.scroll-animation.visible {
    opacity: 1;
    transform: translateY(0);
}